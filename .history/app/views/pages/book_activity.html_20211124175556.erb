<div class="m-3 p-3">
<h2>Choose an activity for <%= @kid.first_name %></h2>
     <% @activities.each do |activity| %>
     <div class="card book-activity my-3">
  <div class="activity-image" ></div>
  <div class="card-body">
    <h5 class="card-title"><%= activity.name %></h5>
    <p class="card-text"><%= activity.description %></p>
    <p>üåç <%= activity.location %></p>

     <p>‚è∞ <%= activity.duration %> minutes</p>
     <p>ü§ë <%= activity.price %> Euro</p>


  </div>
  <div class="card-text">
    <div class="container">
     <div class="row">
     <% activity.slots.each do |slot| %>
     <div class="col">
     <div class="card m-3 slot" style="width: 18rem;">
  <div class="card-body">
     <p><strong>Day: </strong><%= slot.day %></p>
     <p><strong>Time: </strong><%= slot.time %></p>
     <div class='btn btn-edit'><%= link_to 'Book a slot', kid_bookings_path(kid_id: @kid.id, slot_id: slot.id), method: :post, data: {confirm: "Are you sure you want to book this slot?"}, class: "btn btn-book" %></div>

    </div>
     </div>
     </div>
     <% end %>
     </div>
     </div>

  </div>
</div>







     <% end %>

</div>


<div class='show_info_cards'>
  <% if @kid.gender == 'female' %>
    <img src="https://cdn-icons-png.flaticon.com/512/163/163811.png" alt="girl">
  <% elsif @kid.gender == 'male' %>
    <img src="https://cdn-icons-png.flaticon.com/512/163/163807.png" alt="boy">
  <% else %>
    <img src="https://cdn-icons-png.flaticon.com/512/1499/1499179.png" alt="bear">
  <% end %>
  <h2><%= @kid.first_name%> <%= @kid.last_name %></h2>
  <div class='age'>
    <h2><%= @kid.age %> <img src="https://cdn-icons.flaticon.com/png/512/2985/premium/2985632.png?token=exp=1637767843~hmac=1c7529f63fae9115007d5e21bd1524b1" alt="cake"></h2>
  </div>
</div>

<h2>Choose your activity</h2>
<% @activities.each do |activity| %>
  <div class="activity m-3 p-3">
     <h3><strong></strong><%= activity.name %></h3>
     <p><strong>Description: </strong><%= activity.description %></p>
     <p><strong>Location: </strong><%= activity.location %></p>
     <p><strong>Availability: </strong><%= activity.availability %></p>
     <p><strong>Duration: </strong><%= activity.duration %></p>
     <p><strong>Price: </strong><%= activity.price %></p>
    <div class="container">
      <div class="row">
        <% activity.slots.each do |slot| %>
          <div class="col">
            <div class="slot m-2 p-4">
              <p><strong>Day: </strong><%= slot.day %></p>
              <p><strong>Time: </strong><%= slot.time %></p>
              <div class='btn btn-edit'>
                <%= link_to 'Book a slot', kid_bookings_path(kid_id: @kid.id, slot_id: slot.id), method: :post %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
