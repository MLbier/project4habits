<div class="container my-4">
<div class="row">

<div class="col">
<h2>My Activities</h2>

<table>
  <thead>
    <tr>
    <th>Activity name</th>
    <th class="pl-2">Location</th>
    </tr>
  </thead>

  <tbody>
  <% if @user_activities.count > 0 %>
    <% @user_activities.each do |activity| %>
      <div>
      <tr>
        <td><%= activity.name %></td>
        <td><%= activity.location %></td>
        <% activity.slots.each do |slot| %>
          <% slot.bookings.each do |booking| %>
            <%= booking.id %>
          <% end %>
        <% end %>
      </tr>
      </div>


    <% end %>
    <% else %>
    <p>You don't have any activities yet...</p>
    <% end %>
  </tbody>
</table>




</div>

<div class="col">
<h2>Bookings overview</h2>
<table>
  <thead>
    <tr>
    <th>Who booked</th>
    <th>Date</th>
    <th>Time</th>
    </tr>
  </thead>

  <tbody>
  <% if @bookings_requests %>
    <% @bookings_requests.each do |booking| %>
      <tr>
        <td><%= booking.kid.name %></td>
        <td><%= booking.slot.day %></td>
        <td><%= booking.slot.time %></td>


      </tr>
    <% end %>
    <% else %>
    <p>You don't have any booking requests yet</p>
    <% end %>
  </tbody>
</table>
</div>

</div>
</div>
