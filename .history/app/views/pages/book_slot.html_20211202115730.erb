<div class="container" >
  <%= link_to activity_path(@activity), class: "link_to" do %>
    <div class="arrow">
      <%= image_tag "backarrow.png" %>
    </div>
  <% end %>
</div>

<div class='title-booking'>
  <h2>book your slot for <%= @kid.first_name %></h2>
</div>
<div class="main-card-booking custom-slot">
      <h4><%= @activity.name %></h4>
      <p class="card-text p-1"><%= @activity.description %></p>
      <div class="icons text-left ml-3 my-2">
      <h6>📍 <%= @activity.location %></h6>
      <h3>⏰ <%= @activity.duration %>min</h3>
      <h3>🏷 <%= @activity.price %>€</h3>
      </div>

      <div class="dropdown">
      <button class="btn btn-book-show dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        open slots
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

      <% @activity.slots.each do |slot| %>




        <%= link_to "#{slot.day} " "#{slot.time}", kid_bookings_path(kid_id: @kid.id, slot_id: slot.id), method: :post, data: {confirm: "Are you sure you want to book this slot?"}, class: "dropdown-item custom-dropdown-item" %>



      <% end %>

      </div>
      </div>

    </div>
