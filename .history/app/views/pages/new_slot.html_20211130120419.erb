<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
    <h1>Add a new booking time</h1>
      <%= simple_form_for(@activity) do |f| %>
        <%= f.input :name, :input_html => { :class => 'booking-input' } %>
        <%= f.input :description, :input_html => { :class => 'booking-input' } %>
        <%= f.input :price, :input_html => { :class => 'booking-input' } %>
        <%= f.input :location, :input_html => { :class => 'booking-input' } %>
        <%# <%= f.input :photo, as: :file %>
        <%= f.submit "Submit", class: "btn btn-nav w-100 mr-sm-4" %>
      <% end %>
    </div>
  </div>
</div>
