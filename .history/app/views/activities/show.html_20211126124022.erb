
<div class='show-container'>
    <%#=cl_image_tag @activity.photo.key%>

  <div class='info-text mx-4'>

    <h1><strong><%= @activity.name %></strong></h1>
    <p><strong>Description: </strong><%= @activity.description %></p>
    <p><strong>Location: </strong><%= @activity.location %></p>
    <p><strong>Price: </strong><%= @activity.price %>â‚¬</p>
    <p><strong>Availability: </strong><%= @activity.availability %></p>
    <% if @kids == "nil" %>
    <div>To book an activity, you need to add a kid profile first</div>
    <% else %>
    <div> <%= link_to "choose a kid", choose_kid_path(activity_id: @activity.id), class: "btn-book btn" %></div>
    <% end %>
    <div> <%= link_to "back to all activities ", activities_path, class: 'btn-show' %>
    </div>

    <% if current_user == @activity.user %>
      <div class='btn btn-edit mr-sm-4'><%= link_to 'Edit', edit_activity_path(@activity) %></div>
      <div class='btn btn-destroy mr-sm-4'><%= link_to "Delete activity", activity_path(@activity), method: :delete, data: {confirm: "Are you sure?"}  %></div>
    <% end %>
  </div>
</div>
