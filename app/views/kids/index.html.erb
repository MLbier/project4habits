<div class='text-center mt-3'>
  <%= link_to "back to homepage", root_path, id: "back_home_btn" %>
</div>

<div class='cards_kid'>
  <% @kids.each do |kid|%>
      <% if current_user == kid.user %>
        <div class='card_kid'>
          <%= link_to kid_path(kid), class: "d-block" do %>
            <% if kid.gender == 'female' %>
              <img src="https://cdn-icons-png.flaticon.com/512/163/163811.png" alt="girl">
            <% elsif kid.gender == 'male' %>
              <img src="https://cdn-icons-png.flaticon.com/512/163/163807.png" alt="boy">
            <% else %>
              <img src="https://cdn-icons-png.flaticon.com/512/1499/1499179.png" alt="bear">
            <% end %>
            <h4><%= kid.first_name %> <%= kid.last_name %></h4>
            <div class='age'>
              <h4><%= kid.age %> <img src="https://cdn-icons.flaticon.com/png/512/2985/premium/2985579.png?token=exp=1637853768~hmac=3ef5e5236391e50d8a158256943b03e4" alt="cake" alt="cake"></h4>
            </div>
          <% end %>
        </div>
      <% end %>
  <% end %>
</div>
<div class='plus-icon'>
  <%= link_to  new_kid_path() do %>
    <img src="https://cdn-icons-png.flaticon.com/512/1828/1828764.png" alt="plus">
  <% end %>
</div>
